#!/usr/bin/env bash

# Add entries to the /etc/hosts file to map localhost to 127.0.0.2
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts

# Install the necessary packages for configuring DNS
sudo apt-get update
sudo apt-get install -y dnsmasq

# Add a DNS record for facebook.com to resolve to 8.8.8.8
echo "server=/facebook.com/8.8.8.8" | sudo tee -a /etc/dnsmasq.conf

# Restart the DNS service
sudo systemctl restart dnsmasq.service
